<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <br><br>
        <h1 class="header center lightseagreen-text">New Deals</h1>
        <div class="row center">
            <h5 class="header col s12 light">Find and save from Slick Deals!</h5>
        </div>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="search-input" class="materialize-textarea"></textarea>
                        <label for="search-input">Search item</label>
                    </div>
                </div>
            </form>
        </div>
        <div class="row center">
            <a id="search-button" class="btn-large waves-effect waves-light white-text">Search Deals!</a>
        </div>
        <br><br>
        <br><br>

    </div>
</div>

{{!-- tabs --}}
<!-- collapsible elements -->
<div class="container">
    <ul id="tabs-swipe" class="tabs">
        <li class="tab col s6"><a href="#results-swipe">Results</a></li>
        <li class="tab col s6"><a href="#saved-swipe">Saved</a></li>
    </ul>
    <div class="progress">
        <div class="indeterminate"></div>
    </div>
    <div id="results-swipe" class="col s12">
        {{#each dbDeals}}
        {{#unless this.isSaved}}
        <div class="row mt-4">
            <div class="col">
                <a href="{{this.link}}">{{this.title}}</a>
                <p>Price: {{this.price}}</p>
                <p>Seller: {{this.store}}</p>
                <p>Popularity: {{this.rating}}</p>

                <a id="{{this._id}}" class="secondary-content saveItem" data-save-item="{{this._id}}"><i
                        class="medium material-icons lightseagreen-text tooltipped" data-position="top"
                        data-tooltip="Save">save</i></a>
            </div>
        </div>
        <hr class="m-4">
        {{/unless}}
        {{/each}}

    </div>
    <div id="saved-swipe" class="col s12">
        {{#each dbDeals}}
        {{#if this.isSaved}}
        <div id="item-group-${index}" class="row mt-4">
            <div id="detail-group-${index}" class="col">
                <a href="{{this.link}}">{{this.title}}</a>
                <p>Price: {{this.price}}</p>
                <p>Seller: {{this.store}}</p>
                <p>Popularity: {{this.rating}}</p>

                <a id="{{this._id}}" class="secondary-content removeItem" data-save-item="{{this._id}}"><i
                        class="medium material-icons lightseagreen-text tooltipped" data-position="top"
                        data-tooltip="Delete">delete</i></a>
            </div>
        </div>
        <hr class="m-4">
        {{/if}}
        {{/each}}
    </div>
</div>



{{!-- search --}}
<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <br><br>
        <h1 class="header center lightseagreen-text">New Deals</h1>
        <div class="row center">
            <h5 class="header col s12 white-text light ">Find and save your favorite Slick Deals!</h5>
        </div>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="search-input" class="materialize-textarea"></textarea>
                        <label for="search-input">Search item</label>
                    </div>
                </div>
            </form>
        </div>

        {{!-- buttons --}}
        <div class="row center">
            <a id="search-button" class="btn-large waves-effect waves-light white-text tooltipped" data-position="right"
                data-tooltip="Feeling Lucky?">Search Deals! <i class="material-icons right">send</i>
            </a>
        </div>
        <div class="row center">
            <a id="clear-button" class="btn-small waves-effect waves-light white-text mb-4 tooltipped"
                data-position="right" data-tooltip="Clear Unsaved Results">Clear Results <i
                    class="material-icons right">delete_forever</i>
            </a>
        </div>


        {{!-- tap target --}}
        <div class="row">
            <a id="help-menu" class="waves-effect waves-light btn btn-floating"
                onclick="$('.tap-target').tapTarget('open')"><i class="material-icons">help_outline</i></a>

            <!-- Tap Target Structure -->
            <div class="tap-target cyan" data-target="help-menu">
                <div class="tap-target-content">
                    <h5 class="help-header mb-3">Need some help?</h5>
                    <ul class="help-text mb-4">
                        <li class="pb-1">
                            - Type an item to search
                        </li>
                        <li class="pb-1">
                            - Search results will persist
                        </li>
                        <li class="pb-1">
                            - Clearing the results will not affect your saved ones!
                        </li>
                    </ul>
                    <br><br>
                </div>
            </div>
        </div>

    </div>
</div>

{{!-- tabs --}}
<div class="container">
    <ul id="tabs-swipe" class="tabs tabs-fixed-width mt-5">
        <li class="tab col s6"><a href="#results-swipe" class="tooltipped" data-position="top"
                data-tooltip="All Search Results! Save The Best Deal!">Results</a></li>
        <li class="tab col s6"><a href="#saved-swipe" class="tooltipped" data-position="top"
                data-tooltip="Your Saved Deals!">Saved</a></li>
    </ul>
    <div class="progress">
        <div class="indeterminate"></div>
    </div>
    <div id="results-swipe" class="col s12">
        {{#each dbDeals}}
        {{#unless this.isSaved}}
        <div class="row mt-4">
            <div class="col">
                <a href="{{this.link}}" class="mb-3">{{this.title}}</a>
                <p class="mt-4">Price: {{this.price}}</p>
                <p>Seller: {{this.store}}</p>
                <p>Popularity: {{this.rating}}</p>

                <a id="{{this._id}}" class="secondary-content saveItem" data-save-item="{{this._id}}"><i
                        class="medium material-icons lightseagreen-text tooltipped" data-position="top"
                        data-tooltip="Save">save</i></a>
            </div>
        </div>
        <hr class="m-4 line">
        {{/unless}}
        {{/each}}

    </div>
    <div id="saved-swipe" class="col s12">
        {{#each dbDeals}}
        {{#if this.isSaved}}
        <div id="item-group-${index}" class="row mt-4">
            <div id="detail-group-${index}" class="col">
                <a href="{{this.link}}" class="mb-3">{{this.title}}</a>
                <p class="mt-4">Price: {{this.price}}</p>
                <p>Seller: {{this.store}}</p>
                <p>Popularity: {{this.rating}}</p>

                <a id="{{this._id}}" class="secondary-content removeItem" data-save-item="{{this._id}}"><i
                        class="medium material-icons lightseagreen-text tooltipped" data-position="top"
                        data-tooltip="Delete">delete</i></a>
            </div>
        </div>
        <hr class="m-4 line">
        {{/if}}
        {{/each}}
    </div>
</div>


<!--  Scripts-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.0/axios.js"></script>
<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script src="js/materialize.js"></script>
<script src="js/materialize.init.js"></script>
<script src="./js/app.js"></script>
<script src="./js/tabs.materialize.js"></script>
<script src="./js/tooltip.materialize.js"></script>